<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <!-- ────────────── Packages ────────────── -->
  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk"  Version="17.8.0" />
    <PackageReference Include="MSTest.TestFramework"    Version="3.2.0" />
    <PackageReference Include="MSTest.TestAdapter"      Version="3.2.0" />
    <PackageReference Include="Microsoft.Azure.Workflows.WebJobs.Tests.Extension"
                      Version="1.0.0-preview" />
    <PackageReference Include="coverlet.collector"      Version="3.1.2" />
  </ItemGroup>

  <!-- ─────── Test-data that already lives **inside** the test project ─────── -->
  <ItemGroup Label="WorkflowTestData">
    <!-- Any file under MockOutputs or a *Workflow folder -->
    <None Update="**/MockOutputs/**/*;**/*Workflow/**/*"
          CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- ─────── NEW : copy the *real* workflow definitions from the app ─────── -->
  <ItemGroup Label="WorkflowDefinitions">
    <!--
      Adjust the relative path if you move folders.
      This grabs every *.json under any folder that ends in *Workflow* (e.g. MyWorkflowSample)
      that lives beneath the main Logic-App project at ../../MyLogicApp/
    -->
    <None Include="..\..\MyLogicApp\**\*Workflow*\**\*.json"
          Link="%(RecursiveDir)%(Filename)%(Extension)"
          CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
