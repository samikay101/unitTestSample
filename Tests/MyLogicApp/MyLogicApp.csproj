<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <!-- ────────────── Packages ────────────── -->
  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk"  Version="17.8.0" />
    <PackageReference Include="MSTest.TestFramework"    Version="3.2.0" />
    <PackageReference Include="MSTest.TestAdapter"      Version="3.2.0" />
    <PackageReference Include="Microsoft.Azure.Workflows.WebJobs.Tests.Extension"
                      Version="1.0.0-preview" />
    <PackageReference Include="coverlet.collector"      Version="3.1.2" />
  </ItemGroup>

  <!-- ─────── Test data copied to bin/… ─────── -->
  <ItemGroup Label="WorkflowTestData">
    <!-- Add Copy-to-output metadata to any file under MockOutputs or *Workflow -->
    <None Update="**/MockOutputs/**/*;**/*Workflow/**/*"
          CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
